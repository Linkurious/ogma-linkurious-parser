{
  "compilerOptions": {
    "declaration": true,
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "outDir": "./dist/fesm5",
    "rootDir": "./src",
    "sourceMap": true,
    "inlineSources": true,
    "lib": ["es2016", "es2017", "dom"],
    "target": "es5",
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "typeRoots": [
    "node_modules/@types"
  ],
  "angularCompilerOptions": {
    "flatModuleOutFile": "fesm5/index.js",
    "flatModuleId": "index"
  },
  "exclude": [
    "tests/**/*.spec.ts",
    "dist/**/*"
  ]
}
